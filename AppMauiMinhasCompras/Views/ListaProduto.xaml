<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMauiMinhasCompras.Views.ListaProduto"
             Title="Lista de Produtos">

    <!-- Adicionar o ToolbarItem dentro da tag ContentPage -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Adicionar" 
                     IconImageSource="add.png"
                     Clicked="ToolbarItem_Clicked_1"/>
    </ContentPage.ToolbarItems>

    <StackLayout>
        <!-- SearchBar para busca -->
        <SearchBar x:Name="searchBar"
                   Placeholder="Buscar produtos"
                   TextChanged="OnSearchBarTextChanged"/>

        <!-- ListView para exibir produtos -->
        <ListView x:Name="listView"
                  ItemsSource="{Binding Produtos}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Descricao}"
                              Detail="{Binding Preco}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
